"segments": [
  {
    "foreground": "#87CEEB",
    "style": "plain",
    "template": "{{ .UserName }} ",
    "type": "session"
  },
  {
    "foreground": "#00BFFF",
    "properties": {
      "style": "folder"
    },
    "style": "plain",
    "template": "<#ffffff>in</> {{ .Path }} ",
    "type": "path"
  },
  {
    "foreground": "#B39EB5",
    "foreground_templates": [
      "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
      "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
      "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
      "{{ if gt .Behind 0 }}#B388FF{{ end }}"
    ],
    "properties": {
      "fetch_status": true,
      "fetch_stash_count": true,
      "fetch_upstream": true
    },
    "style": "plain",
    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ue700 {{ .StashCount }}{{ end }} ",
    "type": "git"
  },
  {
    "foreground": "#FFFFFF",
    "style": "plain",
    "template": " {{ .CurrentDate | date \"15:04\" }} ",
    "type": "time"
  },
  {
    "background_templates": [
      "{{ if eq .State.String \"Full\" }}#4CAF50{{ end }}",
      "{{ if eq .State.String \"Charging\" }}#40C4FF{{ end }}",
      "{{ if eq .State.String \"Discharging\" }}#FF5722{{ end }}"
    ],
    "foreground": "#193549",
    "properties": {
      "charged_icon": "\uf240 ",
      "charging_icon": "\uf242 ",
      "discharging_icon": "\uf243 "
    },
    "style": "plain",
    "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}%{{ end }} ",
    "type": "battery"
  },
  {
    "foreground": "#FF0000",
    "foreground_templates": ["{{ if gt .Code 0 }}#FF0000{{ end }}"],
    "properties": {
      "always_enabled": true
    },
    "style": "plain",
    "template": " exit:{{ .Code }} ",
    "type": "status"
  }
]